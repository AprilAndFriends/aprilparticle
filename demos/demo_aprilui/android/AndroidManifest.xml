<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="com.aprilparticle.demoAprilUi"
		android:versionCode="2000"
		android:versionName="2.0.0">
	
	<uses-sdk android:minSdkVersion="15" android:targetSdkVersion="25"/>
	<uses-feature android:glEsVersion="0x00020000"/>
	<uses-feature android:name="android.hardware.screen.sensorLandscape"/>
	
	<application android:label="Demo AprilUI"
			android:icon="@drawable/icon"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		<activity android:name=".DemoAprilUi"
				android:label="Demo AprilUI"
				android:screenOrientation="sensorLandscape"
				android:launchMode="singleTask">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
	</application>
	
</manifest> 
